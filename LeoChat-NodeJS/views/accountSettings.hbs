        <!--DELETE ACCOUNT MODAL!-->
        <div class="modal fade" id="delAccount" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content text-light" style="background-color: rgb(49, 49, 49)">
                        <div class="modal-header">
                            <h5 class="modal-title" id="changePasswordModalTitle">Elimina account</h5>
                            <span type="button" data-dismiss="modal" aria-label="Close">&times;</span>
                        </div>
                        <div class="modal-body">
                            <div class="step step-1">
                                <h4 style="color: white;">Sei sicuro di voler eliminare il tuo account?</h4>
                                <div class="d-flex justify-content-center">
                                    <button type="button" class="btn btn-danger" id="btn-next">Si, eliminalo</button>
                                    <button type="button" class="btn btn-primary" data-dismiss="modal" style="margin-left: 10px;">No! Non eliminarlo!</button>                             
                                </div>
                            </div>
                            <div class="step step-2" style="display: none;">
                                <div class="row justify-content-center">
                                    <div class="col-auto">
                                        <form action="/account/actions/delete" method="POST">
                                            <p style="color: rgb(153, 153, 153); font-weight: bold; font-size: 13px;">PASSWORD ATTUALE</p>
                                            <input type="password" id="password" name="password" class="form-control text-light" style="background-color: #1d1d1d; border-color: #1d1d1d; width: 400px;" required="true"> 
                                            <br>
                                            <div class="d-flex justify-content-end">
                                                <button type="submit" class="btn btn-danger ml-auto" id="btn-finish" style="display: none;">Elimina</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script>
            var currentUrl = window.location.href;
            var splittedUrl = currentUrl.split('/');
            var link = splittedUrl[splittedUrl.length - 1];
            var accountLink = document.getElementById('accountLink');
            console.log(link);
            
            if (link === 'account') {
                accountLink.classList.add('bold-link');
            }

            document.addEventListener("DOMContentLoaded", function() {
                var currentStep = 1;
                var totalSteps = 2;

                var btnPrevious = document.getElementById("btn-previous");
                var btnNext = document.getElementById("btn-next");
                var btnFinish = document.getElementById("btn-finish");
                var modalBody = document.querySelector(".modal-body");

                var steps = Array.from(modalBody.querySelectorAll(".step"));

                btnNext.addEventListener("click", function() {
                if (currentStep < totalSteps) {
                    steps[currentStep - 1].style.display = "none";
                    steps[currentStep].style.display = "block";

                    currentStep++;

                    if (currentStep === totalSteps) {
                    btnNext.style.display = "none";
                    btnFinish.style.display = "inline-block";
                    }

                    btnPrevious.style.display = "inline-block";
                }
                });

                btnPrevious.addEventListener("click", function() {
                if (currentStep > 1) {
                    steps[currentStep - 1].style.display = "none";
                    steps[currentStep - 2].style.display = "block";

                    currentStep--;

                    if (currentStep === 1) {
                    btnPrevious.style.display = "none";
                    }

                    btnNext.style.display = "inline-block";
                    btnFinish.style.display = "none";
                }
                });
            });
        </script>
